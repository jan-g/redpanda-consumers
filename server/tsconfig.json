{
    "compilerOptions": {
        "target": "ES2020",
        "sourceMap": true,
        "strict": true,
        "exactOptionalPropertyTypes": true,
        "esModuleInterop": true,
        "moduleResolution": "Bundler",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "types": [
            "node"
        ],
        "lib": [
            "es2021"
        ],
        "baseUrl": ".",
        "resolveJsonModule": true,
        "allowJs": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "declaration": true
    }
}
